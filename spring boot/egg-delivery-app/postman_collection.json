{
  "info": {
    "name": "Egg Delivery API",
    "description": "Collection Postman pour tester l'API de l'application Egg Delivery",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Client",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Jean Dupont\",\n  \"email\": \"jean.dupont@example.com\",\n  \"motdepasse\": \"password123\",\n  \"telephone\": \"+237690000000\",\n  \"adresse\": \"Yaoundé, Cameroun\",\n  \"typeUtilisateur\": \"CLIENT\",\n  \"preferencesLivraison\": \"Livraison le matin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"jean.dupont@example.com\",\n  \"motdepasse\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Produits",
      "item": [
        {
          "name": "Get All Produits",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/produits",
              "host": ["{{base_url}}"],
              "path": ["api", "produits"]
            }
          }
        },
        {
          "name": "Get Produit By ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/produits/1",
              "host": ["{{base_url}}"],
              "path": ["api", "produits", "1"]
            }
          }
        },
        {
          "name": "Create Produit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Œufs Bio Extra Large\",\n  \"description\": \"Œufs biologiques de qualité supérieure\",\n  \"typeOeuf\": \"Bio\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/produits/vendeur/1",
              "host": ["{{base_url}}"],
              "path": ["api", "produits", "vendeur", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Offres",
