        {
          "name": "Get All Offres",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/offres",
              "host": ["{{base_url}}"],
              "path": ["api", "offres"]
            }
          }
        },
        {
          "name": "Create Offre",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
