            }
          }
        },
        {
          "name": "Update Commande Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/commandes/1/statut?statut=CONFIRMEE",
